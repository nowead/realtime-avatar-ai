# ✅ 테스트 전용 Dockerfile
FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

COPY ./tests ./tests
COPY ./protos ./protos
COPY ./requirements.txt .
COPY ./requirements-dev.txt .

RUN pip install --no-cache-dir -r requirements-dev.txt
RUN pip install pytest pytest-asyncio grpcio-health-checking

# ✅ proto 컴파일 (test에서도 필요할 경우)
RUN mkdir generated && \
    touch generated/__init__.py && \
    python -m grpc_tools.protoc -I=protos --python_out=generated --grpc_python_out=generated protos/*.proto
RUN test -s generated/llm_pb2.py && test -s generated/llm_pb2_grpc.py && echo "Protoc generated files verified."
CMD ["pytest", "tests/test_llm_engine.py", "-v", "--maxfail=1", "--disable-warnings"]
